<% include ../partials/header.ejs %>

<main class="container">
    <div class="panel panel-default">
        <div class="panel-heading">
 
        </div> <!-- panel-heading -->
        <% if (responses.length > 0) { %>
        
        <div class="panel-body table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <thead>
                    <tr>
                        <th>Survey ID</th>
                        <th>Survey Name</th>
                        <th>Answer 1</th>
                        <th>Answer 2</th>
                        <th>Answer 3</th>
                        <th>Answer 4</th>
                        <th>Answer 5</th>
                        <th>Answer 6</th>
                        <th>Answer 7</th>
                        <th>Answer 8</th>
                        <th>Answer 9</th>
                        <th>Answer 10</th>
                        <th>Date Created</th>
                   </tr>
                </thead>
                <tbody>
                <% for (var i = 0; i < responses.length; i++) { %>
                <tr>
                    <td>
                        <%= responses[i].surveyid %>    
                    </td>
                    <td>
                        <%= responses[i].name %>    
                    </td>
                    <td>
                        <%= responses[i].answerq01 %>
                    </td>
                    <td>
                        <%= responses[i].answerq02 %>
                    </td>
                    <td>
                        <%= responses[i].answerq03 %>
                    </td>
                    <td>
                        <%= responses[i].answerq04 %>
                    </td>
                    <td>
                        <%= responses[i].answerq05 %>
                    </td>
                    <td>
                        <%= responses[i].answerq06 %>
                    </td>
                    <td>
                        <%= responses[i].answerq07 %>
                    </td>
                    <td>
                        <%= responses[i].answerq08 %>
                    </td>
                    <td>
                        <%= responses[i].answerq09 %>
                    </td>
                    <td>
                        <%= responses[i].answerq10 %>
                    </td>
                    <td>
                        <% var date = new Date(responses[i].created);
                         var dateString = date.toDateString() + " " + date.toLocaleTimeString(); %>
                        <%= dateString %>
                    </td>

                </tr>
                <% } %>
                </tbody>
            </table>
        </div> <!-- panel-body -->
       <% } %>
    </div><!-- panel panel-default -->

</main>
<% include ../partials/boot.ejs %>
<% include ../partials/footer.ejs %>